{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "eol-last": "off",
        "space-before-function-paren": "off",
        "indent": ["error", 4],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always",{ "omitLastInOneLineBlock": true}],
        "one-var": ["off"],
        "space-before-blocks": ["off"],
        "camelcase": ["off"]
    }
}